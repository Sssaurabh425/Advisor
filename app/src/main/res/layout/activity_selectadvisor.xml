<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectadvisor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Advisors"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:layout_marginTop="45dp"

        android:background="#8c8c8c">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/aakash_info"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="1dp"
                            android:text="Akash Patel"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:text="Mumbai"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/savneetimageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="24dp"
                            android:contentDescription="hello_world" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/savneetcircleView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/savneetimageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            android:src="@drawable/bakra6" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/peterinfo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="1dp"
                            android:text="Peter Sarye"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:text="New York"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/Girishimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="24dp"
                            android:contentDescription="hello_world" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Girishcircle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/GirishimageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            android:src="@drawable/bakra2" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/allsoninfo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="1dp"
                            android:text="Alison Greenwood"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:text="London"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="60dp"
                                android:src="@drawable/star" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/gunjanimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="24dp"
                            android:contentDescription="hello_world" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/gunjancircle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gunjanimageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            android:src="@drawable/bakra3" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>