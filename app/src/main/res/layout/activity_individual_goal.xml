<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndividualGoal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/green"
            android:gravity="center"
            android:text="Set Your Goal"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/AddGoal"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"


                    android:layout_marginTop="4dp"
                    android:src="@drawable/dreamhome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Dream Home"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Buy your dream home"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/GetGoal"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:layout_marginTop="4dp"
                    android:src="@drawable/education" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Education"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Your Child Education"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/WholeStatement"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:layout_marginTop="4dp"
                    android:src="@drawable/dreambike" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Dream Bike"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Get your Dream Bike"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/AddExpenses"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:layout_marginTop="4dp"
                    android:src="@drawable/travel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Travel"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Plan For Travel"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/GetExpenses"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:layout_marginTop="4dp"
                    android:src="@drawable/wedding" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Wedding Plan"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Plan your Child Wedding"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/AddGoal3"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/business">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/busi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="New Business"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Set up new business"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/AddGoal4"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"

                    android:layout_marginTop="4dp"
                    android:src="@drawable/retirement1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Retirement Plan"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Set your early plan"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/GetGoal5"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/expcadpopupbd"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/othergoal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Other Goal"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgrey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Set different Goal"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

</LinearLayout>